<odoo>
    <data>
        <record id="contract_prov_form" model="ir.ui.view">
            <field name="name">contract_prov.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']" position="after">
                    <page string="Acumulado De Vacaciones">
                        <group string="Acumulado de Vacaciones">
                            <field name="vacaciones_acumuladas_ids" colspan="4" nolabel="1">
                                <tree string="Resumen de horas extra" editable="bottom">
                                    <field name="fecha_desde" />
                                    <field name="fecha_hasta" />
                                    <field name="fecha_pago"/>
                                    <field name="dias" />
                                    <field name="dias_disfrutados"/>
                                    <field name="pago_parcial"/>
                                    <field name="pago_realizado"/>
                                </tree>
                            </field>
                            <field name="dias_totales" invisible="1"/>
                            <field name="pago_total" invisible="1"/>
                        </group>
                    </page>
                    <page string="Acumulado Prima">
                        <group string="Acumulado Prima">
                            <field name="prima_acumuladas_ids" colspan="4" nolabel="1">
                                <tree string="Resumen del acumulado de prima" editable="bottom">
                                    <field name="id_nom"/>
                                    <field name="fecha_desde" />
                                    <field name="fecha_hasta" />
                                    <field name="fecha_pago_nomina"/>
                                    <field name="dias"/>
                                    <field name="dias_pagados"/>
                                    <field name="valor"/>
                                    <field name="pagado"/>
                                </tree>
                            </field>
                            <field name="total_acumulado" invisible="1"/>
                            <field name="total_de_dias_acumulados_pri" invisible="1"/>
                        </group>
                    </page>
                    <page string="Acumulado Cesantias">
                        <group string="Acumulado Cesantias">
                            <field name="cesantias_acumuladas_ids" colspan="4" nolabel="1">
                                <tree string="Resumen del acumulado de Cesantias" editable="bottom">
                                    <field name="id_nom"/>
                                    <field name="fecha_desde" />
                                    <field name="fecha_hasta" />
                                    <field name="fecha_pago_nomina"/>
                                    <field name="dias"/>
                                    <field name="valor"/>
                                    <field name="pago"/>
                                </tree>
                            </field>
                            <field name="total_acumulado_cesantias" invisible="1"/>
                        </group>
                    </page>
                    <page string="Acumulado Intereses Cesantias">
                        <group string="Acumulado Intereses Cesantias">
                            <field name="intereses_cesantias_acumuladas_ids" colspan="4" nolabel="1">
                                <tree string="Resumen del acumulado de Cesantias" editable="bottom" default_order="fecha_desde_i asc">
                                    <field name="id_nom_i"/>
                                    <field name="fecha_desde_i" />
                                    <field name="fecha_hasta_i" />
                                    <field name="fecha_pago_nomina_i"/>
                                    <field name="dias_i"/>
                                    <field name="valor_i"/>
                                    <field name="pago"/>
                                    <field name="pago_anterior" invisible="1"/>
                                </tree>
                            </field>
                            <field name="total_intereses_cesantias" invisible="1"/>
                            <field name="dias_acumulados" invisible="1"/>
                        </group>
                    </page>
                    <page string="Registro Retencion en la fuente">
                        <group string="Registro Retencion en la Fuente">
                            <field name="registro_retefuente_ids" colspan="4" nolabel="1">
                                <tree string="Resumen de las retenciones en la fuente del empleado" editable="bottom">
                                    <field name="fecha_desde" />
                                    <field name="fecha_hasta" />
                                    <field name="ingreso_laboral"/>
                                    <field name="ingresos_no_constitutivos"/>
                                    <field name="total_deducciones"/>
                                    <field name="rentas_exentas"/>
                                    <field name="renta_trabajador"/>
                                    <field name="base_retencion"/>
                                    <field name="ingreso_uvt"/>
                                    <field name="valor"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
        <record id="view_hr_payslip_form_inherit_payslip_" model="ir.ui.view">
            <field name="name">view_hr_payslip_form_inherit_payslip_</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="bi_hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='credit_note']" position="after">
                    <field name="vacaciones_compensadas" string="Pagar Vacaciones Compensadas" />
                </xpath>
                <xpath expr="//field[@name='credit_note']" position="after">
                    <field name="numero_dias_vac_com" string="Numero de Dias vacaciones compensadas" attrs="{'invisible': [('vacaciones_compensadas', '=', False)]}" />
                </xpath>
            </field>
        </record>
    </data>
</odoo>