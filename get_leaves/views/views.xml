<odoo>
  <data>

    <record id="view_leaves_in_payslip" model="ir.ui.view">
      <field name="name">view.leaves.payslip</field>
      <field name="model">hr.payslip</field>
      <field name="inherit_id" ref="bi_hr_payroll.view_hr_payslip_form" />
      <field name="arch" type="xml">
        <xpath expr="//page[3]" position="after">
          <group string="Leaves" invisible="0">
            <field name="leaves_ids" />
            <field name="overtime_ids" colspan="4">
              <tree string="Resumen de horas extra" editable="bottom">
                <field name="tipo_de_hora_extra" />
                <field name="start_date" />
                <field name="end_date" />
                <field name="num_of_hours" />
                <field name="pago" readonly="1"/>
              </tree>
            </field>
          </group>
        </xpath>
      </field>
    </record>

    <record id="view_leave_dian" model="ir.ui.view">
      <field name="name">view.leaves.dian</field>
      <field name="model">hr.leave</field>
      <field name="inherit_id" ref="hr_holidays.hr_leave_view_form_manager" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='number_of_days']" position="replace">
          <field name="number_of_days" readonly="1"/>
        </xpath>
        <xpath expr="//field[@name='department_id']" position="after">
          <field name="type_leave_disease_dian" attrs="{'invisible': [('vacation_bool', '==', True)], 'required': [('vacation_bool', '!=', True)]}"/>
          <field name="check_no_remunerado" attrs="{'invisible': True}"/>
          <field name="check_eps" attrs="{'invisible': True}"/>
          <field name="pago" attrs="{'invisible': True}"/>
        </xpath>
        <xpath expr="//group/field[@name='department_id']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//group/field[@name='employee_id']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//h2" position="replace">
          
        </xpath>     

        <xpath expr="//group/group/label[@for='request_date_from']" position="before">
          <field name="employee_id" groups="hr_holidays.group_hr_holidays_user" attrs="{'required': [('holiday_type', '=', 'employee')],                         'invisible': [('holiday_type', '!=', 'employee')]                         }"/>
          <field name="holiday_status_id"/>   
          <field name="field_bol" readonly = "1" invisible="1"/> 
          <field name="vacation_bool" invisible="1"/>
        </xpath>

        <xpath expr="//group/group/label[2]" position="before">
          <field name="include_sunday" attrs="{'invisible': ['|',('check_no_remunerado', '!=', True),('field_bol', '==', True)]}"/>
          <field name="eps_100" string="Pagar EPS al 100%" attrs="{'invisible': [('check_eps', '!=', True)]}"/>
        </xpath>

        <xpath expr="//field[@name='payslip_status']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

        <xpath expr="//field[@name='name']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>
      </field>
    </record>

    <record id="view_pay_overtime" model="ir.ui.view">
      <field name="name">view.pay.overtime</field>
      <field name="model">overtime.request</field>
      <field name="inherit_id" ref="bi_hr_overtime_request_comm.view_overtime_req_form" />
      <field name="arch" type="xml">
        <xpath expr="//field[@name='dept_manager_id']" position="after">
          <field name="pago" attrs="{'invisible': [['state', 'in', ('new', 'first_approve', 'dept_approve')]]}" readonly="1"/>
        </xpath>
      </field>
    </record>

    <!--ARCHIVAR REGLAS ODOO DEFAULT-->
    <record id="hr_holidays.holiday_status_unpaid" model="hr.leave.type">
      <field name="active">False</field>
    </record>

    <record id="hr_holidays.holiday_status_cl" model="hr.leave.type">
      <field name="active">False</field>
    </record>

    <record id="hr_holidays.holiday_status_sl" model="hr.leave.type">
      <field name="active">False</field>
    </record>

    <record id="hr_holidays.holiday_status_comp" model="hr.leave.type">
      <field name="active">False</field>
    </record>

    <!--TOTAL VISTA TREE-->
    <record id="payslip_tree_extended2_co" model="ir.ui.view">
      <field name="name">Vista Tree Total</field>
      <field name="model">hr.payslip</field>
      <field name="inherit_id" ref="bi_hr_payroll.view_hr_payslip_tree"></field>
      <field name="arch" type="xml">
          <field name="date_to" position="after">
              <field name="total_payslip" optional="show" sum="Total" string="Total"/>
          </field>
      </field>
  </record>
  <!--TOTAL VISTA TREE-->

  </data>
</odoo>