<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.auth.oauth</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="bi_hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='hr_payroll_accountant']" position="after">
                <h2>Adjustment Sequences</h2>
                <div class="row mt16 o_settings_container" id="Adjustment_Sequence">
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="adj_sequence" string="Adjustment Note Sequence"/><br/>
                            <field name="adj_sequence"/>
                            <div class="text-muted">
                                Sequence to be used when new Adjustment Note created 
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-12 o_setting_box">
                        <div class="o_setting_left_pane">
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="elim_sequence" string="Elimination Note Sequence"/><br/>
                            <field name="elim_sequence"/>
                            <div class="text-muted">
                                Sequence to be used when new Elimination Note created 
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
