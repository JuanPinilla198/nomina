<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="iuv_inherit_hr_employee_view_form" model="ir.ui.view">
        <field name="name">iuv_inherit_hr_employee_view_form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
        <xpath expr="//field[@name='address_id']" position="before">
                <field name="first_name" string="Primer Nombre"/>
                <field name="second_name" string="Segundo Nombre"/>
                <field name="second_namef" string="Primer Apellido"/>
                <field name="second_namem" string="Segundo Apellido"/>
        </xpath>
        
        <xpath expr="//field[@name='identification_id']" position="replace">
            <field name="document_type"/>
            <field name="id_document_payroll"/>
        </xpath>

        <xpath expr="//group[@name='active_group']" position="inside">
            <field name="employee_type"/>
            <field name="employee_subtype"/>
            <field name="high_risk"/>
        </xpath>
        
        <!--xpath expr="//notebook/page/field[@name='notes']" position="before">
        <group>
            <group string="Contact Extra Information">
                
                
                
                
            </group>
            </group>
           
        </xpath-->
        </field>
    </record>

</odoo>
