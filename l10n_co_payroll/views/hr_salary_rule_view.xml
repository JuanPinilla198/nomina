<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_salary_rule_form_inherit_add_type" model="ir.ui.view">
        <field name="name">hr_salary_rule_form_inherit_add_type</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="bi_hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
          <xpath expr="//group/field[@name='active']" position="after">
                <field name="rule_type" required="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_hr_employee_grade_form_inherit_add_tipo_nomina" model="ir.ui.view">
        <field name="name">view.hr.employee.grade.form.inherit.add.tipo.nomina</field>
        <field name="model">hr.payroll.structure</field>
        <field name="inherit_id" ref="bi_hr_payroll.view_hr_employee_grade_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='parent_id']" position="after">
                <field name="tipo_nomina" />
            </xpath>
        </field>
    </record>
</odoo>