<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="adjust_method_form" model="ir.ui.view">
        <field name="name">adjust.method.wizard</field>
        <field name="model">adjust.method</field>
        <field name="arch" type="xml">
            <form string="Método ajuste">
                <group>
                    <field name="method" string="Método" required="1"/>
                    <field name="reason" string="Razón"/>
                    <field name="date_adjustnote" string="Fecha"/>
                </group>
                <footer>
                    <button string="Reversar" name="action_reverse" type="object" class="oe_highlight"/>
                    <button string="Cerrar" type="btn-primary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="adjust_method_wizard" model="ir.actions.act_window">
        <field name="name">Método de ajuste</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">adjust.method</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="adjust_method_form"/>
        <field name="target">new</field>
    </record>

</odoo>
