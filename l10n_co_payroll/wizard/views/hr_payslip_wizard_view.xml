<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Wizard view-->
        <record  model="ir.ui.view" id="ir_ui_payslip_report_wizard_view">
            <field name="name">Payslip Report Wizard</field>
            <field name="model">payslip.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Payslip Report Wizard">
                    <group invisible="1">
                        <field name="state"/>
                        <field name="name"/>
                        <field name="payslip_ids"/>
                    </group>
                    <group >
                        <group string="Between dates">
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group>
                        <group string="Analytics Accounts">
                            <field name="analitic_account_city" widget="many2many_tags" options="{'no_open':True, 'no_create': True,'no_quick_create':True,'no_create_edit':True}"/>
                            <field name="analitic_account_company" options="{'no_open':True, 'no_create': True,'no_quick_create':True,'no_create_edit':True}"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <group states="choose">
                        <h4>* Click button to print Employee Payslip Report.</h4>
                    </group>
                    <group>
                        <field name="xls_file" readonly="1" filename="name" states="download"/>
                    </group>
                    <footer>
                        <button name="print_report_xls" string="Print Excel" type="object" class="oe_highlight" states="choose"/>
                        <button name="print_report_pdf" string="Print PDF" type="object" class="oe_highlight" states="choose"/>
                        <button name="action_go_back" string="Back" type="object" class="oe_highlight" states="download"/>
                        or
                        <button string="Close" special="cancel" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wizard_payslip_report_excel" model="ir.actions.act_window">
            <field name="name">Payslip Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">payslip.report.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <!-- TODO: check if we need this -->
            <field name="binding_model_id" ref="bi_hr_payroll.model_hr_payslip" />
        </record>


    </data>

    
</odoo>
