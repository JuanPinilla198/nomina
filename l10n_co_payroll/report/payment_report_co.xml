<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="payment_receipt_inherit" inherit_id="eq_payslip_custom_pdf_report.report_custom_payslip_temp_document">
			<xpath expr="//th[@name='payment_method']" position="inside">
				<span>Método de Pago</span>
			</xpath>
					
			<xpath expr="//td[@name='payment_method_2']" position="inside">
				<span t-field="o.payment_method"/>
			</xpath>
					
			<xpath expr="//span[@name='title']" position="replace" t-if="o.cune">
				<span style="text-transform: uppercase;">documento soporte de pago de nómina electrónica </span>
			</xpath>
					
			<xpath expr="//div[@name='firma']" position="after" >
				<div style="border-top: 1px solid black;" t-if="o.cune">
					<span>Este documento corresponde a la representación gráfica de un documento soporte de pago de nómina electrónica. </span><strong>CUNE: </strong><span t-field="o.cune"/>
				</div>
				<div style="border-top: 1px solid black;" align="center" t-if="o.cune">
					<span>Documento generado a través de Odoo S.A y administrado por INTRESCO S.A.S con NIT:901.228.066-4<br/></span> 
				</div>
			</xpath>
					
			<xpath expr="//span[@t-field='o.employee_id.identification_id']" position="replace" >
				<span t-field="o.employee_id.id_document_payroll"/>
			</xpath>
				
			<xpath expr="//td[@name='gen_date']" position="inside">
				<span t-field="o.date_send_dian"/>
			</xpath>
		</template>
</data>
</odoo>
           
