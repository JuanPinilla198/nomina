<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <template id="my_timecard_report_template_view">
            <div class="container o_mrp_bom_report_page">
                <h3 style="text-align : center;font-style:normal;">
                    <span t-field="doc.name"/>Timecard
                </h3>
                <br/>
                <h3>
                    <b style="text-align : left;font-style:normal;">
                        <span t-field="doc.employee_id"/>
                    </b>
                </h3><br/>
                <table style="border-collapse: collapse;width: 100%;border: 2px solid #000;" class="table table-condensed">
                    <tr style="padding: 8px;text-align: center;border: 2px solid #000;height:60%;">
                        <td style="border: 2px solid #000;"><strong >Timecard Period: </strong> </td>                        
                        <td style="border: 2px solid #000;"><strong >State: </strong> </td>
                    </tr>
                    <tr style="padding: 8px;text-align: center;border: 2px #000;height:60%;">
                        <td style="border: 2px solid #000;"><span t-field="doc.date_from"/> To <span t-field="doc.date_to" /></td>
                        <td style="border: 2px solid #000;"><span t-field="doc.state" /></td>
                    </tr>
                    
                </table>
                <br/>

                <h3 style="text-align : left;font-style:normal;">
                    Timesheet Lines:
                </h3><br/>

                <table style="border-collapse: collapse;width: 100%;border: 2px solid #000;" class="table table-condensed">
                    <tr style="padding: 8px;text-align: left;border: 2px solid #000;height:50%;">
                        <th> Date </th>
                        <th>Project </th>
                        <th>Task </th>
                        <th>Description </th>
                        <th>Work Type </th>
                        <th>Start Time </th>
                        <th>End Time </th>
                        <!-- <th>Amount</th> -->
                        <th>Quantity </th>
                        <th>Is Billable </th>
                        <th>Is Paid </th>
                        <th>Hours </th>
                    </tr>
                    <t t-foreach="doc.timesheet_ids" t-as="t">
                        <tr style="padding: 8px;text-align: left;border: 2px  #000;height:50%;">
                            <td><span t-field="t.date" />&amp;nbsp;&amp;nbsp;</td>
                            <td><span t-field="t.project_id" /> </td>
                            <td><span t-field="t.task" /> </td>
                            <td><span t-field="t.name" /> </td>
                            <td><span t-field="t.work_type_id" /> </td>
                            <td><span t-field="t.start_time" /></td>
                            <td><span t-field="t.end_time" /></td>
                            <td><span t-field="t.quantity" /></td>
                            <td><span t-field="t.is_billable" /></td>
                            <td><span t-field="t.is_paid" /></td>
                            <td><span t-field="t.unit_amount" /></td>
                        </tr>
                    </t>
                </table>
            </div>
        </template>

        <template id="payroll_timecard_temp_id">
            <t t-call="web.html_container">
                <t t-call="web.basic_layout">
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <t t-call="bi_payroll_construction_contracting.my_timecard_report_template_view" />
                        </div>
                        <p style="page-break-before:always;"> </p>
                    </t>
                </t>
            </t>
        </template>

</odoo>
