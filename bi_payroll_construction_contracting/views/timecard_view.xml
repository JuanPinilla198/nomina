<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<record id="hr_timesheet_inherit" model="ir.ui.view">
        <field name="name">hr.timesheet.inherit</field>
        <field name="model">hr_timesheet_sheet.sheet</field>
        <field name="inherit_id" ref="bi_hr_timesheet_sheet.hr_timesheet_sheet_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('oe_title')]" position="before">
            <div class="oe_button_box" name="button_box" position="inside">
                    <button class="oe_stat_button" name="butoon_count_payslip"
                            type="object" icon="fa-book"> 
                        <field name="payslip_count" widget="statinfo" string="Sheet" />
                    </button>
                </div>
            </xpath>
            <xpath expr="//page/field[@name='timesheet_ids']" position="replace">
            	 <field context="{'employee_id': employee_id, 'user_id':user_id, 'timesheet_date_from': date_from, 'timesheet_date_to': date_to}" name="timesheet_ids" nolabel="1">
                                <tree editable="bottom" string="Timesheet Activities">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="project_id" required="1"/>
							         <field name="task"/>
						             <field name="work_type_id" options="{'no_create': True}"/>
						             <field name="start_time" widget="float_time"/>
                                     <field name="end_time" widget="float_time"/>
						             <field name="quantity"/>
						             <field name="is_billable"/>
						             <field name="is_paid"/>
                                     <field name="is_payroll_paid" invisible="1"/>
                                    <field name="unit_amount" widget="float_time" string="Hours" sum="Hours"/>
                                    <field name="user_id" invisible="1"/>
                                </tree>
                                <form string="Timesheet Activities">
                                    <group>
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="project_id"/>
                                        <field name="unit_amount" widget="float_time" string="Hours"/>
                                        <field name="user_id" invisible="1"/>
                                    </group>
                                </form>
                  </field>

            </xpath>

        </field>
    </record>

</odoo>