<?xml version="1.0"?>
<odoo>
        <record id="view_page_work_type_rate" model="ir.ui.view">
            <field name="name">view.page.work.type.rate</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//page[@name='information']" position="after">
                    <page string="Work Type Rate" name="work_type_rate">
                        <field name="work_rate_many_ids" nolabel="1">
                        <tree editable="bottom">
                            <field name="work_type_id"  string="Work Type" />
                            <field name="rate"/>
                        </tree>
                    </field>
                    </page>
               </xpath>
               
            </field>
        </record>

        <record id="view_replace_account_analytic" model="ir.ui.view">
            <field name="name">view.replace.account.analytic</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree" />
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='task_id']" position="replace">
                    <field name="task"/>
               </xpath>
               <xpath expr="//field[@name='work_type']" position="replace">
                    <field name= "work_type_id"/>
               </xpath>
               <xpath expr="//field[@name='st_time']" position="replace">
                    <field name= "start_time"/>
               </xpath>
               <xpath expr="//field[@name='ed_time']" position="replace">
                    <field name= "end_time"/>
               </xpath>
               <xpath expr="//field[@name='is_paid']" position="after">
                    <field name= "is_payroll_paid"/>
               </xpath>
            </field>
        </record>

        <record id="view_page_payslip_timesheet_lines" model="ir.ui.view">
            <field name="name">view.page.payslip.timesheet.lines</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="bi_hr_payroll.view_hr_payslip_form" />
            <field name="arch" type="xml">
                <div class="oe_button_box" name="button_box" position="inside">
                    <button class="oe_stat_button" name="butoon_timesheet"
                            type="object" icon="fa-bars"> 
                        <field name="timesheet_count" widget="statinfo" string="Sheet" />
                    </button>
                </div>
                <div class="oe_button_box" name="button_box" position="inside">
                    <button class="oe_stat_button" name="butoon_lines"
                            type="object" icon="fa-bars"> 
                        <field name="count_timesheet_line" widget="statinfo" string="timesheetlines" />
                    </button>
                </div>

                <xpath expr="//notebook" position="inside">
                    <page string="Timesheet Lines">
                        <field name="link_analytic">
                            <tree editable="bottom">
                                <field name="date"/>
                                    <field name="name"/>
                                    <field name="project_id" required="1"/>
                                     <field name="task"/>
                                     <field name="work_type_id"/>
                                     <field name="start_time" widget="float_time"/>
                                     <field name="end_time" widget="float_time"/>
                                     <field name="quantity"/>
                                     <field name="is_billable"/>
                                     <field name="is_paid"/>
                                     <field name="is_payroll_paid"/>
                                    <field name="unit_amount" widget="float_time" string="Hours" sum="Hours"/>
                            </tree>
                        </field>
                    </page>
               </xpath>
               <xpath expr="//notebook" position="inside">
                    <page string="Work Type">
                        <field name="work_type_ids">
                            <tree editable="bottom">
                                <field name="work_type_id" string="Work Type"/>
                                <field name="hours" string="Total Hours" widget="float_time"/>
                            </tree>
                        </field>
                    </page>
               </xpath>
               

            </field>
        </record>


</odoo>
